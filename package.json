{
  "name": "ulov-frontend-admin",
  "private": true,
  "packageManager": "pnpm@7.26.3",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build": "pnpm type-check && pnpm build-only",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom",
    "test:ui": "pnpm test:unit --ui",
    "test:e2e": "start-server-and-test preview :4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' :4173 'cypress open --e2e'",
    "test": "pnpm test:unit --run",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "eslint": "eslint . --ext .{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts} --ignore-path .gitignore",
    "eslint:fix": "pnpm eslint --fix",
    "prepare": "husky install",
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "pnpm eslint:fix && pnpm format"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.8",
    "@intlify/unplugin-vue-i18n": "^0.8.1",
    "@popperjs/core": "^2.11.6",
    "@vuepic/vue-datepicker": "^3.6.7",
    "@vueuse/core": "^9.12.0",
    "apexcharts": "^3.36.3",
    "axios": "^1.3.1",
    "pinia": "^2.0.30",
    "quill": "^1.3.7",
    "quill-delta": "^5.0.0",
    "ulov-shared-types": "^1.0.6",
    "vee-validate": "^4.7.3",
    "vue": "^3.2.47",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6",
    "vue3-apexcharts": "^1.4.1",
    "yup": "1.0.0-beta.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@faker-js/faker": "^7.6.0",
    "@mswjs/data": "^0.11.2",
    "@pinia/testing": "^0.0.14",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.18",
    "@types/quill": "^2.0.10",
    "@types/yandex-maps": "^2.1.28",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/ui": "^0.28.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.9",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.13",
    "cypress": "^12.5.0",
    "eslint": "^8.33.0",
    "eslint-plugin-check-file": "^1.3.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "msw": "^1.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "start-server-and-test": "^1.15.3",
    "tailwindcss": "^3.2.4",
    "typescript": "~4.7.4",
    "vite": "^4.1.0",
    "vitest": "^0.28.3",
    "vue-tsc": "^1.0.24"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
